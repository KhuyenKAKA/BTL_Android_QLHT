<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F8"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- 1. Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/greeting_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hi, Ngô Thị Tú Khuyên"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/notification_button" />

                <ImageButton
                    android:id="@+id/notification_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_notification_bell"
                    android:background="@drawable/rounded_button_background"
                    android:contentDescription="Thông báo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 2. Card Thời khóa biểu -->
            <androidx.cardview.widget.CardView
                android:id="@+id/schedule_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/calendar_illustration"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_calendar_illustration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/schedule_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời khóa biểu"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/calendar_illustration"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 tháng 12"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@id/schedule_title"
                        app:layout_constraintTop_toBottomOf="@id/schedule_title" />

                    <TextView
                        android:id="@+id/no_schedule_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Không có lịch! Xem thêm TKB"
                        android:textSize="14sp"
                        android:textColor="#FF4081"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@id/schedule_title"
                        app:layout_constraintTop_toBottomOf="@id/date_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/exam_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lịch thi"
                        android:textAllCaps="false"
                        app:cornerRadius="10dp"
                        android:backgroundTint="#2196F3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#EEEEEE" />

            <!-- 3. SECTION THÔNG BÁO -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/recent_notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông báo gần đây"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/view_all_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- THẺ THÔNG BÁO TĨNH (Single CardView) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_latest_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_latest_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Đang tải thông báo..."
                        android:textColor="#1565C0"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_latest_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Vui lòng chờ..."
                        android:textColor="#555555"
                        android:textSize="13sp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_latest_title"
                        app:layout_constraintBottom_toTopOf="@id/layout_time"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/layout_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_latest_content">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_clock_outline"
                            app:tint="#999999" />

                        <TextView
                            android:id="@+id/tv_latest_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="--/--"
                            android:textColor="#999999"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kẻ ngang phân cách -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#EEEEEE" />
            <!-- Đã sửa từ 24dp thành 12dp -->

            <!-- 4. SECTION TIỆN ÍCH -->
            <TextView
                android:id="@+id/utility_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiện ích"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"/>
            <!-- Đã sửa từ 24dp thành 12dp -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/utility_row_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/btn_hoidap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_utility_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_question" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="Hỏi đáp"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_taichinh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_utility_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_money" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="Tài chính"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_ketquahp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_utility_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_chart" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="Kết quả HP"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/utility_row_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/btn_dgrl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_utility_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_medal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="Đánh giá RL"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_registerCourses"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_utility_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_money" />
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="Đăng kí HP"
                            android:textColor="#333333"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="8dp">

        <TextView
            style="@style/BottomNavItemStyle"
            android:text="Trang chủ"
            android:textColor="#1E88E5"
            android:drawableTop="@drawable/ic_home_filled"
            android:layout_weight="1"/>

        <TextView
            style="@style/BottomNavItemStyle"
            android:text="Cài đặt"
            android:drawableTop="@drawable/ic_settings_outline"
            android:layout_weight="1"/>

        <TextView
            style="@style/BottomNavItemStyle"
            android:text="Cá nhân"
            android:drawableTop="@drawable/ic_person_outline"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>