<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    android:animateLayoutChanges="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Thanh màu xanh bên trái -->
        <View
            android:id="@+id/bar_status"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#2196F3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Tên học kỳ -->
        <TextView
            android:id="@+id/tv_semester_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Học kỳ 1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@id/bar_status"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Xếp loại (Tốt/Khá) -->
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khá"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Nút mũi tên (Icon) -->
        <!-- Đặt dưới text xếp loại -->
        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_rank"
            android:contentDescription="Expand Details"
            app:tint="#333333" />

        <!-- Container nội dung chi tiết (Phần sẽ ẩn đi khi rút gọn) -->
        <LinearLayout
            android:id="@+id/expandable_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/bar_status"
            app:layout_constraintEnd_toStartOf="@+id/img_arrow"
            app:layout_constraintTop_toBottomOf="@id/tv_semester_title">

            <!-- Row: Giáo viên đánh giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giáo viên đánh giá"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_teacher_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Row: Điểm cộng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Điểm cộng học tập"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_bonus_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Row: Tổng điểm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng điểm"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_total_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="79"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Row: Trạng thái -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trạng thái"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoàn thành"
                    android:textColor="#555555"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>